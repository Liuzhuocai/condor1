<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff5f5f5"
    android:fitsSystemWindows="true"
    >

    <!--title-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_back"
            android:src="@drawable/ic_condor_settings_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="18dp"
            android:paddingEnd="14dp"
            android:layout_gravity="center_horizontal" />
        <TextView
            android:text="@string/unread_notifier_title"
            android:textSize="18sp"
            android:textColor="@color/condor_settings_text_color"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            />

    </LinearLayout>

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1px"-->
        <!--android:background="@color/condor_settings_dividing_line_bg">-->
    <!--</View>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">
        <!--Unread Call-->
        <LinearLayout
            android:id="@+id/ll_unread_call"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:orientation="horizontal"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:text="@string/unread_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:singleLine="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textSize="@dimen/setting_item_textsize"
                    android:textColor="@color/condor_settings_text_color"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:ellipsize="marquee"
                    android:fadingEdge="horizontal" />
            </LinearLayout>

            <Switch
                android:id="@+id/switch_unread_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:switchMinWidth="40dp"
                android:thumb="@drawable/condor_settings_thumb"
                android:track="@drawable/condor_settings_track"
                android:layout_marginEnd="17dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginStart="25dp"
            android:layout_height="1px"
            android:background="@color/condor_settings_dividing_line_bg">
        </View>

        <!--Unread Call-->
        <LinearLayout
            android:id="@+id/ll_unread_sms"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:orientation="horizontal"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:text="@string/unread_sms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:singleLine="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textSize="@dimen/setting_item_textsize"
                    android:textColor="@color/condor_settings_text_color"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:ellipsize="marquee"
                    android:fadingEdge="horizontal" />
            </LinearLayout>

            <Switch
                android:id="@+id/switch_unread_sms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:switchMinWidth="40dp"
                android:thumb="@drawable/condor_settings_thumb"
                android:track="@drawable/condor_settings_track"
                android:layout_marginEnd="17dp" />

        </LinearLayout>

        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_marginLeft="25dp"-->
            <!--android:layout_height="1px"-->
            <!--android:background="@color/condor_settings_dividing_line_bg">-->
        <!--</View>-->
    </LinearLayout>



</LinearLayout>
