<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingBottom="2dp"
    android:gravity="center_vertical"
    android:background="@android:color/transparent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/search_result_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/all_apps_divider"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="2dp"
        android:scaleType="fitXY"
        android:focusable="false" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/search_result_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_alignParentStart="true"
            android:textColor="?android:attr/textColorSecondary" />
        <TextView
            android:id="@+id/search_result_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_alignParentEnd="true"
            android:textColor="?android:attr/textColorSecondary"
            android:background="@drawable/round_rect_mask_ripple"
            android:backgroundTint="?attr/popupColorSecondary"
            android:visibility="gone"/>
        <LinearLayout
            android:id="@+id/search_result_fold_up_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:visibility="gone">
            <ImageView
                android:id="@+id/search_result_fold_up_arrow"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="3dp"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical" />
            <TextView
                android:id="@+id/search_result_fold_up_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginStart="2dp"
                android:layout_gravity="center_vertical"
                android:textColor="?android:attr/textColorSecondary" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>